set filesep " "

# Quick reload LFRC with f5
map <f-5> push :source<space>\%localappdata\%/lf/lfrc<enter>

# Use a and A to create files and directories
# cmd createfile %sh -c 'touch $0'
# cmd createdir %sh -c 'mkdir $0'
# map a push :createfile<space>
# map A push :createdir<space>

# Archives
cmd 7z 7z<space>x<space>%fx%<enter>

#cmd zip push &7z<space>a<space>$0<space>%fx%<enter>
#cmd extract_to %sh<space>-c '7z e %f% -o$0'

# Open explorer in current directory
map <c-o> push &start.<enter>

# Main reversing functionality
cmd ida32 push &<quote>C:/Program<space>Files/IDA<space>Pro<space>8.3/ida.exe<quote><space>%fx%<enter>
cmd ida64 push &<quote>C:/Program<space>Files/IDA<space>Pro<space>8.3/ida64.exe<quote><space>%fx%<enter>
cmd vscode push &code<space>%fx%<enter>
cmd notepad++ push &notepad++<space>%fx%<enter>
cmd hxd push &<quote>C:/Program<space>Files/HxD/HxD.exe<quote><space>%fx%<enter>
cmd 7z push !7z<space>x<space>%fx%<enter>

map xi3 ida32
map xi6 ida64
map xen notepad++
map xev vscode
map xhd hxd
map x7z 7z

# Copy file path
# Todo: make this not have "" around the path
map Y %echo %fx% | clip

cmd peek !emit %fx% | peek
cmd pemeta !emit %fx% | pemeta

# Prevent right arrow from opening files
map <right> open-dir

:set mouse
:set icons
:set relativenumber
:set ignorecase
:set info size:time
:set drawbox
:set wrapscroll
